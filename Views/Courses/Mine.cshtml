
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Content/trangchu.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}
<div>
    <h2>Mine</h2>
    <ul class="course">
        <br>
        @foreach (var course in Model)
        {
            <li style="background: #f3e4e8" class="zone animate__animated animate__flipInX">
                <div class="date">
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                    <div class="month">
                        @course.DateTime.ToString("MMMM")
                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                    </span>
                    <br>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
                <div class="action">
                    <a href="@Url.Action("Edit", "Courses", new { id = course.Id })">Edit</a>
                    <span>|</span>
                    <a href="#" class="js-cancel-course" data-course-id="@course.Id">Cancel</a>
                </div>
            </li>
        }
    </ul>

</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $(".js-cancel-course").click(function (e) {
                e.preventDefault();
                var link = $(e.target);
                bootbox.confirm({
                    title: "Cancel Course ?",
                    message: "Are you sure to cancel ?",
                    buttons: {
                        cancel: {
                            label: '<i class="fa fa-times"></i> Cancel'
                        },
                        confirm: {
                            label: '<i class="fa fa-times"></i> Confirm'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/courses/" + link.attr("data-course-id"),
                                method: "DELETE"
                            })
                                .done(function () {
                                    link.parents("li").fadeOut(function () {
                                        this.remove();
                                    });
                                })
                                .fail(function () {
                                    alert("Something failed");
                                });
                        }
                    }
                });
            });
        });
    </script>
}