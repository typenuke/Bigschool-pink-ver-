
@{
    ViewBag.Title = "WhoIsFollowMe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Content/trangchu.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}

<h2>Who is following me?</h2>

<div class="row">
    <ul class="course">
        @foreach (var follow in Model.Followings)
        {

            <li style="background: #f3e4e8" class="zone zone animate__animated animate__flipInX">
                <br>
                <div class="details">
                    <span class="lecturer">
                        @follow.Name
                    </span>
                </div>
            </li>
        }
    </ul>
</div>